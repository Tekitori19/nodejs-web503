<h1 class="text-4xl font-bold mb-4">Our Product</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-4">

    {{#if data.length }}

    {{#each data}}
    <div>
        <img src="{{imgPath}}" class="w-full h-48 object-cover mb-4 rounded">
    </div>
    <div>
        <h2 class="text-2xl font-semibold mb-2">{{title}}</h2>
        <p class="text-gray-700 mb-2">{{desc}}</p>
    </div>
    {{/each}}

    {{else}}
    <h1 class="text-2xl font-semibold">Product not found</h1>
    {{/if}}
</div>
